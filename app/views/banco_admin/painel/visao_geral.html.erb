<div class="table-responsive card-body">
  <div class="form-row mb-3">
    <div class="col-md">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Clientes</h2>
          <p class="card-text">
          <div class="form-group">
            <h4 class="text-facebook"><span class="text-muted">Total: </span><%= Cliente.count %></h4>
            <small class="text-muted">Clientes de todas as agências</small>
          </div>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Agências</h2>
          <p class="card-text">
          <div class="form-group">
            <h4 class="text-facebook"><span class="text-muted">Total: </span><%= Agencium.count %></h4>
            <small class="text-muted">Agências ativas</small>
          </div>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="form-row mb-3">
    <div class="col-md">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Movimentações</h2>
          <p class="card-text">
          <div class="form-group">
            <h4 class="text-facebook"><span class="text-muted">Total: </span><%= Moviment.count %></h4>
            <small class="text-muted">Quantidade de movimentações feitas em geral</small>
          </div>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Valor movimentado</h2>
          <p class="card-text">
          <div class="form-group">
            <h4 class="text-facebook"><span class="text-muted">Total: </span> R$ <%= Moviment.sum(:valor_movimento).reais %></h4>
            <small class="text-muted">Valores em geral movimentado pelos clientes</small>
          </div>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>